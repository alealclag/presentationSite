<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Alejandro Alc√°ntara</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <!-- My CSS -->
    <link rel="stylesheet" href="css/styles.css" />

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <!-- Fonts Awesome JS -->
    <script
      src="https://kit.fontawesome.com/f0e6aca62c.js"
      crossorigin="anonymous"
    ></script>

    <link rel="icon" href="images/favicon.ico" />
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-md">
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarToggle"
          aria-controls="navbarToggle"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <img src="images/hamburger.png" class="navbar-toggler-icon" />
        </button>

        <div class="collapse navbar-collapse" id="navbarToggle">
          <ul class="navbar-nav m-lg-auto m-md-auto">
            <li class="nav-item">
              <a href="#workGradient" class="nav-link"
                ><i class="fas fa-briefcase"></i> Work Experience</a
              >
            </li>
            <li class="nav-item">
              <a href="#eduGradient" class="nav-link"
                ><i class="fas fa-graduation-cap"></i> Education</a
              >
            </li>
            <li class="nav-item">
              <a href="#knowGradient" class="nav-link"
                ><i class="fas fa-brain"></i> Knowledges</a
              >
            </li>
            <li class="nav-item">
              <a href="#contactGradient" class="nav-link"
                ><i class="fas fa-envelope"></i> Contact me</a
              >
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <section class="" id="presentationSection">
      <div class="container">
        <img
          class="profilePic shadow-lg"
          src="images/prestentationPic.jpg"
          alt="My profile picture"
        />
        <div class="profilePicInstruction" id="playTip">
          <span id="playTipText"> Click on me for a comfy experience! </span>
          <img src="images/arrow.png" class="tipArrow" id="rightArrow" />
        </div>
        <div class="profilePicInstruction" id="pauseTip">
          <img src="images/arrow.png" class="tipArrow" id="leftArrow" />

          And again if you prefer silence
        </div>

        <div id="">
          <h1><%= profile[0].name %></h1>
          <h3><%= profile[0].role %></h3>
          <p><%= profile[0].bio %></p>
        </div>
      </div>
    </section>

    <div class="gradientUp" id="workGradient">
      <h2 class="mx-auto">Work Experience</h2>
    </div>
    <section class="" id="workExpSection">
      <div class="container">
        <img src="images/bgPics/work.png" class="bgPic" />

        <!-- Cards row -->
        <div class="row justify-content-around sectionRow">
          <!-- Cober-->

          <% workCards.forEach(card => { %>
          <div
            class="col-12 col-xxl-5 col-xl-5 col-lg-5 col-md-10 row elementBlock shadow-lg"
          >
            <!-- Upper row -->
            <div class="row ms-0 px-0 upperRow">
              <!-- Left column -->
              <img
                src="<%= card.img %> "
                alt="Cober"
                class="col-6 col-lg-6 col-md-4 cardPic"
              />

              <!-- Right column -->
              <div class="col">
                <!-- Name -->
                <div class="row">
                  <div
                    class="col-auto ms-0 cardInfo cardName align-self-center"
                  >
                    <%= card.name %>
                  </div>
                </div>

                <!-- Role -->
                <div class="row">
                  <div class="col-12 ms-0 cardInfo cardRole">
                    <%= card.role %>
                  </div>
                </div>

                <!-- Date -->
                <div class="row">
                  <div class="col-auto ms-0 cardInfo cardDates">
                    <%= card.dateFrom.toLocaleDateString("es-ES",{month: 'short', year: 'numeric'}) %> - 
                    <% if (card.dateTo == null) { %>
                     Present
                    <% }else{ %>
                      <%= card.dateTo.toLocaleDateString("es-ES",{month: 'short', year: 'numeric'}) %>
                    <% } %>
                    
                  </div>
                </div>
              </div>
            </div>

            <!-- Lower row -->
            <div class="row mt-1 ms-0 pe-0 lowerRow">
              <!-- Description -->
              <div class="col cardInfo cardDesc"><%= card.desc.substring(0, 210) %>
              <% if (card.desc.length > 210) { %>
               <span>. . .</span>
              <% } %>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>
    <div class="gradientDown" id="eduGradient"></div>

    <section class="" id="EduSection">
      <div class="container">
        <h2 class="mx-auto">Education</h2>
        <img src="images/bgPics/education.png" class="bgPic eduBgPic" />

        <div class="row justify-content-around sectionRow">
          <% eduCards.forEach(card => { %>
          <div
            class="col-12 col-xxl-5 col-xl-5 col-lg-5 col-md-10 row elementBlock elementBlockEdu shadow-lg"
          >
            <!-- Upper row -->
            <div class="row ms-0 px-0 upperRow">
              <!-- Left column -->
              <img
                src="<%= card.img %> "
                alt="JS, CSS and HTML"
                class="col-6 col-lg-6 col-md-4 cardPic"
              />

              <!-- Right column -->
              <div class="col">
                <!-- Name -->
                <div class="row">
                  <div
                    class="col-auto ms-0 cardInfo cardName align-self-center"
                  >
                    <%= card.name %>
                  </div>
                </div>

                <!-- Role -->
                <div class="row">
                  <div class="col-12 ms-0 cardInfo cardRole webDevCourse">
                    <%= card.study %>
                  </div>
                </div>

                <!-- Date -->
                <div class="row">
                  <div class="col-auto ms-0 cardInfo cardDates">
                    <%= card.dateFrom.toLocaleDateString("es-ES",{month: 'short', year: 'numeric'}) %> - 
                    <% if (card.dateTo == null) { %>
                     Present
                    <% }else{ %>
                      <%= card.dateTo.toLocaleDateString("es-ES",{month: 'short', year: 'numeric'}) %>
                    <% } %>
                  </div>
                </div>
              </div>
            </div>

            <!-- Lower row -->
            <div class="row mt-1 ms-0 pe-0 lowerRow">
              <!-- Description -->
              <div class="col cardInfo cardDesc"><%= card.desc.substring(0, 210) %>
              <% if (card.desc.length > 210) { %>
               <span>. . .</span>
              <% } %></div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>

    <div class="gradientUp" id="knowGradient"></div>
    <section class="" id="KnowledgeSection">
      <div class="container">
        <h2 class="mx-auto">Knowledges</h2>
        <div class="row justify-content-center">
          <div
            class="col-xxl-5 col-xl-6 col-lg-8 col-md-10 col-sm-11 knowledgeBlock"
          >
            <h3 class="knowSubBlockTitle">Technologies</h3>
            <div class="knowledgeSubBlock shadow-lg" id="techKnow">
              <div class="container">
                <img src="images/bgPics/tech.png" class="bgPic knowBgPic" />

                <div class="row gy-4 justify-content-around">
                  <% techCards.forEach(card => { %>
                  <div
                    class="col-4 col-xxl-3 col-xl-3 col-lg-3 col-md-3 col-sm-3 mx-1 techBlock shadow-lg"
                  >
                    <div class="row mx-0">
                      <img
                        src="<%= card.img %> "
                        alt="<%= card.name %> logo"
                        class="col px-0 techPic"
                      />
                    </div>
                    <div class="row m-0">
                      <div class="col m-0 techName"
                      <% if (card.name == "Embedded Systems") { %>
                       id="embSys-card"
                      <% } %>
                      ><%= card.name %></div>
                    </div>
                  </div>
                  <% }) %>
                </div>
              </div>
            </div>
          </div>

          <div
            class="col-xxl-5 col-xl-6 col-lg-8 col-md-10 col-sm-11 knowledgeBlock"
          >
            <h3 class="knowSubBlockTitle">
              Languages (spoken, not for coding)
            </h3>
            <div class="knowledgeSubBlock shadow-lg" id="langKnow">
              <div class="container">
                <img src="images/bgPics/lang.png" class="bgPic knowBgPic" />
                <h4 class="levelTitle">Native</h4>
                <div class="row">
                  <% langCards.forEach(card => { %>
                   <% if (card.level == "Native") { %>
                    <div class="col-4 mx-1 shadow-lg langBlock" id="<%= card.name %>Block">
                      <div class="row mx-0">
                        <img
                          src="<%= card.img %> "
                          alt="<%= card.name %>  Flag"
                          class="col px-0 mx-0 flagPic"
                        />
                      </div>
                      <div class="row">
                        <div class="col langName"><%= card.name %> </div>
                      </div>
                    </div>
                   <% } %>
                  <% }) %>
                </div>

                <h4 class="levelTitle leftLangBlock">Advanced</h4>
                <div class="row justify-content-end">
                  <% langCards.forEach(card => { %>
                   <% if (card.level == "Advanced") { %>
                    <div class="col-4 mx-1 shadow-lg langBlock" id="<%= card.name %>Block">
                      <div class="row mx-0">
                        <img
                          src="<%= card.img %> "
                          alt="<%= card.name %>  Flag"
                          class="col px-0 mx-0 flagPic"
                        />
                      </div>
                      <div class="row">
                        <div class="col langName"><%= card.name %> </div>
                      </div>
                    </div>
                   <% } %>
                  <% }) %>
                </div>

                <h4 class="levelTitle">Intermediate</h4>
                <div class="row">
                  <% langCards.forEach(card => { %>
                   <% if (card.level == "Intermediate") { %>
                    <div class="col-4 mx-1 shadow-lg langBlock" id="<%= card.name %>Block">
                      <div class="row mx-0">
                        <img
                          src="<%= card.img %> "
                          alt="<%= card.name %>  Flag"
                          class="col px-0 mx-0 flagPic"
                        />
                      </div>
                      <div class="row">
                        <div class="col langName"><%= card.name %> </div>
                      </div>
                    </div>
                   <% } %>
                  <% }) %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <div class="gradientDown" id="contactGradient"></div>

    <section class="" id="contactSection">
      <h2 class="mx-auto">Contact Me</h2>
      <!-- Grid to center contact form -->
      <div class="container">
        <img src="images/bgPics/mail.png" class="bgPic mailPic" />

        <div class="row justify-content-center">
          <form
            method="POST"
            id="contactForm"
            class="col-lg-6 shadow-lg"
          >
            <!-- Name + Email -->
            <div class="row justify-content-center">
              <div class="col-lg-6">
                <input
                  type="text"
                  name="name"
                  id="contactName"
                  placeholder="Name"
                />
              </div>
              <div class="col-lg-6">
                <input
                  type="text"
                  name="email"
                  id="contactMail"
                  placeholder="Email"
                />
              </div>
            </div>

            <!-- Message Textarea -->
            <div class="row justify-content-center">
              <div class="col-lg-12">
                <textarea
                  name="message"
                  id="contactMessage"
                  class="fullWidthFormField"
                  cols="30"
                  rows="10"
                  placeholder="Message..."
                ></textarea>
              </div>
            </div>

            <!-- Button -->
            <div class="row justify-content-center">
              <div class="col-lg-6">
                <button class="btn btn-lg sendMessageBtn fullWidthFormField">
                  <i class="fas fa-check invisibility"></i>
                  <span class="sendFormText">Send</span>
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </section>

    <footer>
      <div class="container">
        <div class="row justify-content-between align-items-center">
          <div class="col-6 col-xl-2 col-xxl-2 col-lg-3 col-md-4">
            <a href="https://www.linkedin.com/in/alejandro-alcantara-laguna"
              ><img
                src="images/linkedin.png"
                alt="LinkedIn Profile"
                class="footerIcon"
            /></a>
            <a href="https://github.com/alealclag"
              ><img
                src="images/github.png"
                alt="GitHub Repo"
                class="footerIcon"
            /></a>
          </div>
          <div class="col-6 col-xxl-3 col-xl-3 col-lg-3 col-md-4">
            <p>Want to know how does this website work?</p>
            <a href="https://github.com/alealclag/presentationSite">
              <button type="button" class="btn shadow-lg footerBtn">
                Here's the Repo
              </button>
            </a>
          </div>
        </div>
      </div>
    </footer>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script type="text/javascript" src="js/index.js"></script>
  </body>
</html>
